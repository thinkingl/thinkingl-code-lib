{
    "version": "0.2.0",
    "configurations": [

        {
            "name": "Debug & test",
            "type": "cppdbg",
            "request": "launch",
            "args": [ "test", "--dir_log=./logs" ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "linux": {
                "MIMode": "gdb",
                "miDebuggerPath": "gdb",
                "program": "${workspaceFolder}/output/x"
            },
            "osx": {
                "MIMode": "lldb",
                "miDebuggerPath": "lldb-mi",
                "program": "${workspaceFolder}/output/x"
            },
            "windows": {
                "MIMode": "gdb",
                "miDebuggerPath": "gdb.exe",
                "program": "${workspaceFolder}/output/x.exe"
            },
            "preLaunchTask": "build"
        },
